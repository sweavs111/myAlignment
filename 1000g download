#1000genomes and denisova/neanderthal data form Riley, what he used for his multiple alignment (post samToFa step)
#using faFilter from gonomics to pull out the chr4 region and chr1 region (in separate blocks)

#ran this script for all 1000 genomes .fa files

#extractFa.sh

#!/bin/bash

#SBATCH --mail-type=END,FAIL --mail-user=seth.weaver@duke.edu
#SBATCH --mem=50G

FA=$1
PREFIX=$(basename $FA .fa)

/data/lowelab/sethdata/go/bin/faFilter -name 4 -start 118418033 -end 118671410 $1 ${PREFIX}_chr4.fa

/data/lowelab/sethdata/go/bin/faFilter -name 1 -start 242969081 -end 243017216 $1 ${PREFIX}_ch1Block1.fa

/data/lowelab/sethdata/go/bin/faFilter -name 1 -start 243017217 -end 243212177 $1 ${PREFIX}_chr1Block2.fa

Take reverse compliment with gonomics software
#reorderRevComp.sh

#!/bin/sh

BLOCK1=$1
BLOCK2=$2

PREFIX=$(basename $1 Block1.fa)
PREFIX1=$(basename $1 .fa)
PREFIX2=$(basename $2 .fa)

wc -c ${PREFIX1}.fa
wc -c ${PREFIX2}.fa

#cut the name line from block1
tail -n +2 $1 > ${PREFIX1}_cut.fa

#put the blocks in order
cat ${PREFIX2}.fa ${PREFIX1}_cut.fa > ${PREFIX}Reordered.fa

wc -c ${PREFIX}Reordered.fa

/data/lowelab/sethdata/go/bin/faRevComp ${PREFIX}Reordered.fa ${PREFIX}ReorderedRevComp.fa
